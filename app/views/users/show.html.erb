<div class='template'>
  <%= render partial: 'shared/user-container', locals: { user: @user } %>
  <div><%= @user.bio %></div>
  <% @user.recent_posts.each do |post| %>
    <div>
      <h3><%= link_to post.title, user_post_url(post) %></h3>
      <p><%= post.text %></p>
      <small>Comments:<%= post.comments_counter %>, Likes:<%= post.likes_counter %></small>
    </div>
  <% end %>
  <div class='button-wrapper'>
    <button type="button" class='see-posts-btn'>
      <%= link_to "See all posts", user_posts_url(@user) %>
    </button>
  </div>
</div>
